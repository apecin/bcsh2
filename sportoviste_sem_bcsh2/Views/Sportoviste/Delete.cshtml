@model sportoviste_sem_bcsh2.Models.Sportoviste
@{
    ViewData["Title"] = "Smazat sportoviště";
}


<div class="card shadow-lg p-4 text-center">
    <h2 class="text-secondary mb-4">Opravdu chcete smazat toto sportoviště?</h2>
    <p class="fs-5"><strong>@Model.Nazev</strong></p>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mt-4">
            <button type="submit" class="btn btn-outline-danger btn-lg me-3">
                <i class="bi bi-trash"></i> Ano, smazat
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Zpět na seznam
            </a>
        </div>
    </form>
</div>

<style>
    .card {
        background-color: #f8f9fa;
        border-radius: 15px;
    }

    h2 {
        color: #6c757d;
        font-weight: 700;
    }

    .btn-outline-danger {
        background-color: #f8d7da;
        color: #842029;
        border: 2px solid #f5c2c7;
    }

    .btn-outline-danger:hover {
        background-color: #f5c2c7;
    }

    .btn-outline-secondary {
        color: #6c757d;
        border: 2px solid #e2e3e5;
    }

    .btn-outline-secondary:hover {
        background-color: #e2e3e5;
    }

    p.fs-5 {
        color: #495057;
        margin-top: 15px;
    }
</style>
