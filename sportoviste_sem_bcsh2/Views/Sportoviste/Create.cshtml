@model sportoviste_sem_bcsh2.Models.Sportoviste
@{
    ViewData["Title"] = "Vytvořit sportoviště";
}

<h2>Vytvořit nové sportoviště</h2>

<form method="post" asp-action="Create">
    <div class="mb-3">
        <label for="nazev" class="form-label">Název</label>
        <input type="text" class="form-control" id="nazev" name="Nazev" required>
    </div>
    <button type="submit" class="btn btn-success">Vytvořit</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Zpět na seznam sportovišť</a>
