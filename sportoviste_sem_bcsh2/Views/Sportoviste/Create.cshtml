@model sportoviste_sem_bcsh2.Models.Sportoviste

<div class="card shadow-lg p-4">
    <h2 class="text-secondary mb-4">Vytvořit nové sportoviště</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form method="post" asp-action="Create">
        @Html.AntiForgeryToken()

        <div class="mb-4">
            <label for="nazev" class="form-label fw-bold">Název</label>
            <input type="text" class="form-control" id="nazev" name="Nazev" placeholder="Zadejte název sportoviště" required />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-outline-success btn-lg">
                <i class="bi bi-plus-lg"></i> Vytvořit
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Zpět na seznam
            </a>
        </div>
    </form>
</div>

<style>
    .card {
        background-color: #f8f9fa;
        border-radius: 15px;
    }

    h2 {
        color: #6c757d;
        font-weight: 700;
    }

    .btn-outline-success {
        background-color: #e9f7f0;
        color: #155724;
        border: 2px solid #d1e7dd;
    }

        .btn-outline-success:hover {
            background-color: #d1e7dd;
        }
</style>
