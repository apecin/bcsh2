@model sportoviste_sem_bcsh2.Models.Sportoviste

<div class="card shadow-lg p-4">
    <h2 class="text-secondary mb-4">Upravit sportoviště</h2>

    <form method="post" asp-action="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-4">
            <label for="nazev" class="form-label fw-bold">Název</label>
            <input type="text" class="form-control" id="nazev" name="Nazev" value="@Model.Nazev" placeholder="Zadejte název sportoviště" required />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-save"></i> Uložit změny
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Zpět na seznam
            </a>
        </div>
    </form>
</div>
