@model IEnumerable<Sportoviste>

@{
    ViewData["Title"] = "Sportoviště";
}

<h2>Seznam sportovišť</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Název</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sportoviste in Model)
        {
            <tr>
                <td>@sportoviste.Nazev</td>
                <td>
                    <a href="/Sportoviste/Details/@sportoviste.Id" class="btn btn-info btn-sm">Detail</a>
                    <a href="/Sportoviste/Edit/@sportoviste.Id" class="btn btn-warning btn-sm">Upravit</a>
                    <a href="/Sportoviste/Delete/@sportoviste.Id" class="btn btn-danger btn-sm">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Sportoviste/Create" class="btn btn-primary mt-3">Přidat nové sportoviště</a>
