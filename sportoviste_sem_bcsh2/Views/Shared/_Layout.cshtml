<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - sportoviste_sem_bcsh2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sportoviste_sem_bcsh2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Rezervační systém sportovišť</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="/Sportoviste">Sportoviště</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Hriste">Hřiště</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Obsazenost">Obsazenost</a></li>
                    
                    @if (Context.Session.GetString("UzivatelJmeno") != null)
                    {
                            <li class="nav-item"><a class="nav-link" href="/Rezervace">Rezervace</a></li>

                    }
                    </ul>
                    <!-- Sekce pro přihlášení/odhlášení -->
                    <div class="d-flex align-items-center">
                        @if (string.IsNullOrEmpty(Context.Session.GetString("UzivatelJmeno")))
                        {
                            <a class="btn btn-outline-primary" href="/Uzivatel/Prihlaseni">Přihlásit se</a>
                        }
                        else
                        {
                            <span class="navbar-text">Přihlášený: @Context.Session.GetString("UzivatelJmeno")</span>
                            <a class="btn btn-outline-primary ms-3" href="/Uzivatel/Profil">Můj profil</a>
                            <a class="btn btn-outline-danger ms-3" href="/Uzivatel/Odhlaseni">Odhlásit se</a>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Sportoviště
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
