<div class="card p-4 shadow">
    <h2 class="mb-4 text-center">Výběr sportoviště</h2>

    <form asp-action="Obsazenost" method="post">
        @Html.AntiForgeryToken()

        <div class="row g-3 align-items-center mb-4">
            <!-- Výběr sportoviště -->
            <div class="col-md-6">
                <label for="sportovisteDropdown" class="form-label">Vyberte sportoviště:</label>
                <select id="sportovisteDropdown" name="sportovisteId" class="form-control form-select" required>
                    <option value="">-- Vyberte sportoviště --</option>
                    @foreach (var sportoviste in (IEnumerable<dynamic>)ViewBag.SportovisteList)
                    {
                        <option value="@sportoviste.Id">@sportoviste.Nazev</option>
                    }
                </select>
            </div>

            <!-- Výběr datumu -->
            <div class="col-md-4">
                <label for="datePicker" class="form-label">Datum:</label>
                <input type="date" id="datePicker" name="selectedDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>

            <!-- Tlačítko -->
            <div class="col-md-2 text-end">
                <button type="submit" class="btn btn-outline-success btn-lg px-4 w-100">
                    <i class="bi bi-search"></i> Zobrazit obsazenost
                </button>
            </div>
        </div>
    </form>
</div>

<style>
    .card {
        background-color: #f8f9fa;
        border-radius: 15px;
    }

    h2 {
        color: #6c757d;
        font-weight: 700;
    }


    .form-select, .form-control {
        border-radius: 10px;
        height: 45px;
    }

    .form-label {
        font-size: 14px;
        font-weight: 600;
        color: #495057;
    }

    .shadow {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    i.bi-search {
        margin-right: 8px;
    }
</style>
