@model sportoviste_sem_bcsh2.Models.Rezervace

<div class="card shadow-lg p-4">
    <h2 class="text-secondary mb-4">Detail rezervace</h2>

    <table class="table table-bordered">
        <tr>
            <th class="table-light">Hřiště</th>
            <td>@Model.Hriste?.Nazev</td>
        </tr>
        <tr>
            <th class="table-light">Klient</th>
            <td>@Model.Klient</td>
        </tr>
        <tr>
            <th class="table-light">Datum a čas</th>
            <td>@Model.Cas.ToString("dd.MM.yyyy HH:mm")</td>
        </tr>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Zpět na seznam
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-lg">
            <i class="bi bi-pencil"></i> Upravit rezervaci
        </a>
    </div>
</div>
