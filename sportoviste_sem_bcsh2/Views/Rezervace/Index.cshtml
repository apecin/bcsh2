@model IEnumerable<sportoviste_sem_bcsh2.Models.Rezervace>

@{
    ViewData["Title"] = "Rezervace";
}

<h2>Seznam rezervací</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Hřiště</th>
            <th>Klient</th>
            <th>Čas</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rezervace in Model)
        {
            <tr>
                <td>@rezervace.Hriste</td>
                <td>@rezervace.Klient</td>
                <td>@rezervace.Cas</td>
                <td>
                    <a href="/Rezervace/Detail/@rezervace.Id" class="btn btn-info btn-sm">Detail</a>
                    <a href="/Rezervace/Edit/@rezervace.Id" class="btn btn-warning btn-sm">Upravit</a>
                    <a href="/Rezervace/Delete/@rezervace.Id" class="btn btn-danger btn-sm">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Rezervace/Create" class="btn btn-primary mt-3">Vytvořit novou rezervaci</a>
