@{
    ViewData["Title"] = "Přístup odepřen";
}

<div class="container mt-5 text-center">
    <div class="card shadow-lg p-4">
        <h1 class="text-danger mb-4">
            <i class="bi bi-shield-lock-fill"></i> Přístup odepřen
        </h1>
        <p class="fs-5">Nemáte oprávnění pro přístup na tuto stránku.</p>
        @if (ViewBag.ReturnUrl != null)
        {
            <p class="text-muted">Původní adresa: <code>@ViewBag.ReturnUrl</code></p>
        }
        <div class="mt-4">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-house"></i> Zpět na domovskou stránku
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        background-color: #f8f9fa;
        border-radius: 15px;
    }

    h1 {
        font-weight: 700;
    }
</style>
