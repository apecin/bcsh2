@model IEnumerable<Hriste>

@{
    ViewData["Title"] = "Hřiště";
}

<h2>Seznam hřišť</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Název</th>
            <th>Typ</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hriste in Model)
        {
            <tr>
                <td>@hriste.Nazev</td>
                <td>@hriste.Typ</td>
                <td>
                    <a href="/Hriste/Details/@hriste.Id" class="btn btn-info btn-sm">Detail</a>
                    <a href="/Hriste/Edit/@hriste.Id" class="btn btn-warning btn-sm">Upravit</a>
                    <a href="/Hriste/Delete/@hriste.Id" class="btn btn-danger btn-sm">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Hriste/Create" class="btn btn-primary mt-3">Přidat nové hřiště</a>
